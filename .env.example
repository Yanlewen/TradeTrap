# TradeTrap - Unified Environment Configuration
# Copy this file to .env and modify as needed
# This file contains configuration for both AI-Trader and valuecell modules

# ============================================================================
# Runtime Environment Path
# ============================================================================
# Path to runtime environment JSON file (shared config between processes)
RUNTIME_ENV_PATH=data/.runtime_env.json

# ============================================================================
# LLM API Keys (used by both AI-Trader and valuecell)
# ============================================================================

# OpenAI API Configuration
OPENAI_API_BASE=""
OPENAI_API_KEY=""

# For other providers, refer to their respective LangChain documentation

# ============================================================================
# AI-Trader Configuration
# ============================================================================

# External API Keys
ALPHAADVANTAGE_API_KEY=""
JINA_API_KEY=""
TUSHARE_TOKEN=""

# MCP Service HTTP Ports
MATH_HTTP_PORT=8000
SEARCH_HTTP_PORT=8001
TRADE_HTTP_PORT=8002
GETPRICE_HTTP_PORT=8003

# Agent Configuration
AGENT_MAX_STEP=30

# ============================================================================
# Valuecell / Auto Trading Agent Configuration
# ============================================================================

# Trading Symbols (comma-separated)
CRYPTO_SYMBOLS=BTC-USD,ETH-USD,SOL-USD

# Initial Capital (USD)
INITIAL_CAPITAL=100000

# Check Interval (seconds)
CHECK_INTERVAL=60

# Risk Per Trade (percentage, e.g., 5 means 5%)
RISK_PER_TRADE=5

# Maximum number of open positions
MAX_POSITIONS=5

# AI Signals
USE_AI_SIGNALS=true
AGENT_MODEL=gpt-4o-mini

# Exchange Configuration (Paper trading only)
EXCHANGE=paper
EXCHANGE_NETWORK=paper
ALLOW_LIVE_TRADING=false  # 保留字段，无实盘功能
