# Auto Trading Agent Configuration
# Copy this file to .env and modify as needed

# Trading Symbols (comma-separated)
CRYPTO_SYMBOLS=BTC-USD,ETH-USD,SOL-USD

# Initial Capital (USD)
INITIAL_CAPITAL=100000

# Check Interval (seconds)
CHECK_INTERVAL=60

# Risk Per Trade (percentage, e.g., 5 means 5%)
RISK_PER_TRADE=5

# Maximum number of open positions
MAX_POSITIONS=5

# AI Signals
USE_AI_SIGNALS=true
AGENT_MODEL=gpt-4o-mini

# Exchange Configuration (Paper trading only)
EXCHANGE=paper
EXCHANGE_NETWORK=paper
ALLOW_LIVE_TRADING=false  # 保留字段，无实盘功能

# LLM API Keys (set based on your provider)
# For OpenAI:
OPENAI_API_KEY=

# For Anthropic:
ANTHROPIC_API_KEY=

# For other providers, refer to their respective LangChain documentation


